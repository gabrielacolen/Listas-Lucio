#include <stdio.h>
#include <stdlib.h>

int maiorValor(int x, int y, int z);
int leiaValor();

int main()
{
    printf("Vamos descobrir qual o maior numero digitado\n");

    int numero1, numero2, numero3;

    numero1 = leiaValor();
    numero2 = leiaValor();
    numero3 = leiaValor();

    printf("\n O maior = %i", maiorValor(numero1, numero2, numero3));
    return 0;
}

int maiorValor(int x, int y, int z){
    int maior = x;
    if(y>maior) maior = y;
    if(z>maior) maior = z;

    return maior;
}

int leiaValor(){
    int valor;
    printf("\n Digite um valor: ");
    scanf("%i", &valor);

    return valor;
}
