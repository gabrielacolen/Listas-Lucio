#include <iostream>

using namespace std;

const int TAM = 3;


struct Retangulo {
     float base;
     float altura;
};

void leiaRetangulos (Retangulo retangulo[]){
    for (int i=0; i<TAM; i++){
        printf("\nRetangulo %i", i+1);
        printf("\n Base: ");
        scanf("%f", &retangulo->base);
        printf(" Altura: ");
        scanf("%f", &retangulo->altura);
    }
}

void escrevaRetangulos(Retangulo retangulo[]){
    for (int i=0; i<TAM; i++){
        printf("\n Retangulo %i \n base: %f, altura: %f", i+1, retangulo->base, retangulo->altura);
    }
}

int main() {
    Retangulo retangulo[TAM];
    leiaRetangulos(retangulo);
    escrevaRetangulos(retangulo);
}
